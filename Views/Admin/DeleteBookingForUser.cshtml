@model MovieRentalAppProject.Models.BookingModel

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h4>Booking Details</h4>
<hr />

<div>
    <h5>User ID: @Model.userId</h5>
    <h5>User Name: @Model.user.userName</h5>
    <h5>Booking ID: @Model.bookingId</h5>
    
    <h5>Booking Date: @Model.bookingTime</h5>
</div>

<p>Are you sure you want to delete this booking?</p>

<form asp-action="DeleteBookingForUser" asp-controller="Admin" method="post">
    <input type="hidden" name="userId" value="@Model.userId" />
    <input type="hidden" name="bookingId" value="@Model.bookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="GetUserDetailsAndBookings" asp-route-userId="@Model.userId" class="btn btn-secondary">Cancel</a>
</form>

<br />
<footer>
    @Html.Partial("FooterView")
</footer>