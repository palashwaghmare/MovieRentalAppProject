@model List<MovieRentalAppProject.Models.MovieModel>
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "Movies Booked by User";
}

<h1>Movies Booked by @Accessor.HttpContext.Session.GetString("UserName") </h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Director</th>
                <th>Actors</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.movieName</td>
                    <td>@movie.movieCategory</td>
                    <td>@movie.rentPrice</td>
                    <td>@movie.director</td>
                    <td>@movie.actors</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No movies booked by the user.</p>
}

<a class="btn btn-secondary" asp-action="AllmoviesUser">Back</a>